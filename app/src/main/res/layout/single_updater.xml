<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gmail"
                android:textIsSelectable="true"
                android:paddingRight="7dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/text_updates_gmail"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="15dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="6dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="text_Title"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textIsSelectable="true"
                        android:id="@+id/text_updates_title"
                        android:textSize="17sp"
                        android:background="#01B0C6"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="text_description"
                        android:textAlignment="textStart"
                        android:textSize="15sp"
                        android:textIsSelectable="true"

                        android:textStyle="bold"
                        android:autoLink="web"
                        android:textColorLink=" #7bc9c2"
                        android:linksClickable="true"
                        android:id="@+id/text_updates_description"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>